<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_title_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="575px"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="入网方式："
            android:textColor="#9b9b9b" />

        <TextView
            android:id="@+id/tv_network_diagnosis_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="#555555" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="575px"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="网络状态："
            android:textColor="#9b9b9b" />

        <TextView
            android:id="@+id/tv_network_diagnosis_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textColor="#555555" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="575px"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="网关地址："
            android:textColor="#9b9b9b" />

        <TextView
            android:id="@+id/tv_network_diagnosis_net_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textColor="#555555" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="575px"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="网关连接："
            android:textColor="#9b9b9b" />

        <TextView
            android:id="@+id/tv_network_diagnosis_gateway_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textColor="#555555" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="575px"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Internet连接："
            android:textColor="#9b9b9b" />

        <TextView
            android:id="@+id/tv_network_diagnosis_internet_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textColor="#555555" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="575px"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="服务器连接："
            android:textColor="#9b9b9b" />

        <TextView
            android:id="@+id/tv_network_diagnosis_server_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textColor="#555555" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_network_diagnosis_back"
        style="@style/ButtonFont"
        android:layout_width="980px"
        android:layout_height="140px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150px"
        android:text="返回" />

</LinearLayout>
